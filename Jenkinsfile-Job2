pipeline {
    agent { label 'master' }  // Run on Jenkins Master

    environment {
        TEST_SERVER_IP = "172.20.20.101"
    }

    stages {
        stage('Configure Docker using Ansible') {
            steps {
                script {
                    sh '''
                    ansible-playbook -i /etc/ansible/hosts ~/installing_docker.yml
                    '''
                }
            }
        }
    }

    post {
        success {
            build job: 'Job3'
        }
        failure {
            echo "Job 2 Failed: Docker installation via Ansible failed!"
        }
    }
}
