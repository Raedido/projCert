pipeline {
    agent { label 'built-in' }  // Run on Jenkins Master Node

    environment {
        TEST_SERVER_IP = "172.20.20.101"
        INVENTORY_FILE = "/var/lib/jenkins/inventory.ini"
        PLAYBOOK_FILE = "/var/lib/jenkins/installing_docker.yml"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                script {
                    sh 'rm -rf *'  // Ensure a clean workspace
                }
            }
        }

        stage('Configure Docker using Ansible') {
            steps {
                script {
                    sh '''
                    #!/bin/bash
                    echo "Starting Ansible Playbook for Docker Installation..."
                    start_time=$(date +%s)

                    # Run Ansible Playbook with optimized logging
                    ANSIBLE_STDOUT_CALLBACK=default ansible-playbook -i $INVENTORY_FILE $PLAYBOOK_FILE -q

                    end_time=$(date +%s)
                    echo "✔ Playbook Execution Time: $((end_time - start_time)) seconds"
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Job2 Completed Successfully: Docker installed via Ansible!"
            build job: 'Job3'  // Trigger Job3
        }
        failure {
            echo "❌ Job2 Failed: Docker installation via Ansible failed!"
            error("Stopping pipeline due to failure in Job2")
        }
    }
}
